@model mvc_app.ViewModels.Data101Model
@{
    ViewBag.Title = "Ц.101 ввод";
}

<form asp-action="Shop101" asp-controller="Shops">
    <div class="form-group">
        <label asp-for="BenzinLight" class="control-label">@Html.DisplayNameFor(model=>model.BenzinLight)</label>
        <input type="text" asp-for="BenzinLight" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Butan" class="control-label">@Html.DisplayNameFor(model=>model.Butan)</label>
        <input type="text" asp-for="Butan" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Kerosin" class="control-label">@Html.DisplayNameFor(model=>model.Kerosin)</label>
        <input class="form-control" id="role" asp-for="Kerosin">
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-light" />
    </div>
</form>
