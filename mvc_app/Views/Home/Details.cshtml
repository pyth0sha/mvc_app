@model mvc_app.Models.User
@{
    ViewBag.Title = Model.Name;
}
<h2>Пользователь @Model.Name</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Model.Id</dd>

        <dt>Возраст</dt>
        <dd>@Model.Age</dd>

        <dt>Email</dt>
        <dd>@Model.Email</dd>

        <dt>Пароль</dt>
        <dd>@Model.Password</dd>
    </dl>
</div>
