@model mvc_app.Models.User
@{
    ViewBag.Title = Model.Number;
    var role = "user";
    if(Model.Id == 1){
        role = "admin";
    }
    else{
        role = "user";
    }
}
<h2>Пользователь @Model.Number</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Model.Id</dd>

        <dt>Номер</dt>
        <dd>@Model.Number</dd>

        <dt>Пароль</dt>
        <dd>@Model.Password</dd>

        <dt>Права</dt>
        <dd>@role</dd>
    </dl>
    <a asp-action="Edit" asp-controller="Admin" asp-route-id="@Model.Id">Изменить</a>
</div>
