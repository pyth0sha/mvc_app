@model mvc_app.Models.User
@{
    ViewBag.Title = "Добавление пользователя";
    ViewBag.Name = "qweqwe";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Number" class="control-label">Номер</label>
        <input type="text" asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input type="text" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RoleId" class="control-label">Роль</label>
        <input type="radio" id="admin" asp-for="RoleId" class="form-control" value="1"/>
        <input type="radio" id="user" asp-for="RoleId" class="form-control" value="2"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>