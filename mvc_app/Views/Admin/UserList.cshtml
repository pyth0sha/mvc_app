@model IEnumerable<mvc_app.Models.User>
@{
    ViewBag.Title = "Admin site";
}
<a asp-action="Create">Добавить пользователя</a>

<table class="table table-stripped">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Роль</th>
            <th>Пароль</th>
            <th style="width: 20%;">Действия</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Number</td>
            <td>@item.RoleId</td>
            <td>@item.Password</td>
            <td>
                <div class="btn-group" role="group">
                    
                    <a asp-action="Edit" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-light btn-sm">Изменить</a>
                    <a asp-action="Delete" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>